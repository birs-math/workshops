<article>
<table class="table table-striped table-hover" id="events-list">
	<tbody>
	<tr>
		<th><%= image_tag('globe.png', alt: 'Location') %></th></th><th>Code</th><th>Workshop Name</th><th colspan="2"><th>Dates</th><th><a title="Confirmed Participants">#</a></th>
	</tr>
	<% @events.each do |event| %>
	<tr>
      <td><%= image_tag("flags/#{event.country}.png", height: 18) %></td>
	    <td><%= link_to event.code, event_path(event) %></td>
	    <td><%= link_to event.name, event_path(event) %></td>
	    <td width="125"><%= link_to '<i class="fa fa-calendar fa-fw"></i> Schedule'.html_safe, event_schedule_index_path(event) %></td>
	    <td width="125"><%= link_to '<i class="fa fa-users fa-fw"></i> Members'.html_safe, event_memberships_path(event) %></td>
	    <td width="125"><%= event.dates %></td>
	    <td class="confirmed"><%= event.confirmed_count %></td>
	</tr>
  <% end %>
  <tr>
  	<td colspan="3" align="left"><%= year_link(@events.last, :previous) %></td>
  	<td colspan="4" align="right"><%= year_link(@events.last, :next) %></td>
  </tr>
	</tbody>
</table>
</article>
