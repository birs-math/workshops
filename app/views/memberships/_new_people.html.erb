<div class="panel panel-default">
  <div class="panel-heading">
    <h2>
      New records will be created for these people:<br>
      <small>Please ensure all data is complete and in the correct fields.</small>
    </h2>
    <%= add_member_errors(@add_members).html_safe %>
  </div>
  <table class="table table-striped" id="new-people">
    <tr><th>#</th><th>E-mail</th><th>Lastname</th><th>Firstname</th><th>Affiliation</th></tr>
    <% count = 0; @add_members.new_people.each do |row| %>
      <% count += 1; %>
    <tr>
      <td class="counter"><%= count %></td>
      <td><%= f.text_field :email, name: 'add_members_form[new_people][][email]', value: row[0], class: 'form-control person-data' %></td>
      <td><%= f.text_field :lastname, name: 'add_members_form[new_people][][lastname]',value: row[1], class: 'form-control person-data' %></td>
      <td><%= f.text_field :firstname, name: 'add_members_form[new_people][][firstname]',value: row[2], class: 'form-control person-data' %></td>
      <td><%= f.text_field :affiliation, name: 'add_members_form[new_people][][affiliation]',value: row[3], class: 'form-control form-group person-data' %></td>
    </tr>
    <% end %>
  </table>
</div><!-- new_people panel -->
