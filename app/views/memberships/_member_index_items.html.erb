<% i=1 %>
<% members.each do |member| %>
  <tr class="<%= member.role.delete(' ').downcase %>-row">
    <% if defined?(f) %>
    <td class="select"><%= f.check_box member.id, class: "#{member.attendance.parameterize.downcase}" %></td>
    <% end %>
    <td><%= link_to i, event_membership_path(@event, member) %></td>
    <td class="rowlink-skip"><%= link_to "#{member.person.lname}", event_membership_path(@event, member) %></td>
    <%= show_invited_on_date(member) %>
    <td class="hidden-xs hidden-sm hidden-md rowlink-skip"><%= member.person.affiliation %></td>
    <%= show_email(member) %>
    <td class="hidden-xs rowlink-skip no-print"><%= member.role %></td>
  </tr>
  <% i += 1 %>
<% end %>
