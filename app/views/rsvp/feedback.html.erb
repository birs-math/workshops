<div class="invitation-box container" id="feedback-form">
  <div class="card">
    <div class="rsvp-card-title card-header">
        <h4>Optional RSVP Feedback</h4>
    </div>
    <div class="card-body d-flex flex-column justify-content-center">
      <%= form_tag({controller: 'rsvp', action: 'feedback', method: 'post'},
                   { class: 'form', role: 'form'}) do %>
      <div class="row">
        <div class="col-md-12">
            <h1>Thank you!</h1>
            <h3>How was your experience?</h3>
        </div>
      </div>
      <div class="p-2">
      <%= text_area_tag('feedback_message', "", size: "100x4",
          class: 'form-control', placeholder:
           "Optional: suggest how we could improve this service.") %>
       </div>
       <div class="d-flex flex-row-reverse p-2">
        <%= submit_tag('Send Feedback', class: 'btn btn-lg btn-success') %>
      </div>
      <% end %>
    </div>
  </div>
</div>
