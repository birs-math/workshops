<div class="container-fluid">
  <div class="row">
    <div class="col-md-4">
      <div class="authform">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, role: 'form' }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>
        <h3>Please set your password:</h3>
        <div class="form-group">
          <%= f.label :password, "New password:" %><br />
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>
        <div class="form-group">
            <%= f.label :password_confirmation, "Confirm new password:" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>
        <%= f.submit "Change my password", class: 'button right' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
