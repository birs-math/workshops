<div class="login-box" id="ws-login-box">
  <h3 class="pwchange-head"><i class="fa fa-fw fa-lock"></i>NEW PASSWORD</h3>
  <%= form_for(resource, as: resource_name, url: password_path,
           html: { role: 'form', id: 'reset-form', class: 'newpw-form' }) do |f| %>
    <div class="form-group">
      <%= f.label :email, 'E-MAIL ADDRESS' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
             placeholder: 'Email', id: 'reset-email', class: 'form-control' %>
    </div>
    <div class="form-group btn-container">
      <%= f.button :submit, class: 'btn btn-primary btn-block', id: "reset-button" do %>
        <i class="fa fa-unlock fa-lg fa-fw"></i> RESET
      <% end %>
    </div>
    <div class="form-group mt-3">
      <p class="semibold-text mb-0" id="back-to-login">
        <a href="<%= sign_in_url %>"><i class="fa fa-angle-left fa-fw"></i> Back to Login</a>
      </p>
    </div>
  <% end %>

  <div class="row confirmation-signup">
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="card card-body bg-light col-md-12 horizontal-authform">
        <h2>Note:</h2>
        We are currently waiting e-mail confirmation for: <%= resource.unconfirmed_email %>.
        The account will not work until this e-mail is confirmed.
      </div>
    <% else %>
      <div class="col-md-12">
        <p class="sign-in-links">Are you sure you registered an account here?<br>If not, <%= link_to 'Sign-up here', new_registration_path(resource_name), class: 'right' %>.</p>
      </div>
    <% end %>
  </div>
</div>
