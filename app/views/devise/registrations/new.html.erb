<div class="login-box login-box-signup p-2" id="ws-signup-box">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form', class: 'login-form' }) do |f| %>
  <h3 class="login-head"><i class="fa fa-lg fa-fw fa-user"></i><%= t('user.sign_up') -%></h3>
  <div class="form-group">
    <label class="control-label"><%= t('user.email') -%></label>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'Email', class: 'form-control' %>
  </div>
  <div class="form-group">
    <label class="control-label"><%= t('user.password') -%>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> <%= t('user.characters_minimum') -%>)</em><br />
      <% end %>
    </label>
    <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control' %>
  </div>
  <div class="form-group">
    <label class="control-label"><%= t('user.password_confirmation') -%></label>
    <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control' %>
  </div>
  <div class="form-group btn-container">
    <%= button_tag(type: 'submit', class: 'btn btn-primary btn-block') do %>
      <i class="fa fa-sign-in fa-lg fa-fw"></i><%= t('user.sign_up') -%>
    <% end %>
  </div>
<% end %>
<div class="align-text-bottom" id="about-registration">
  <a href="#" data-toggle="modal" data-target="#about-registration-modal">
    About Registration<i class="fa fa-lg fa-fw fa-question-circle"></i>
  </a>
</div>
</div>


<!-- About Registration Modal -->
<div class="modal fade" id="about-registration-modal" tabindex="-1" role="dialog" aria-labelledby="about-registration" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <p><%= GetSetting.new_registration_msg.html_safe %></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
