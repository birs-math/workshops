  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.5rem;
}

.btn--large {
  padding: 0.75rem 1.5rem;
  font-size: 1rem;
  min-width: 200px;
}

.conflict-details {
  margin-top: 2rem;
  padding: 1rem;
  background: #f8f9fa;
  border-radius: 8px;
}

.definition-list {
  display: grid;
  grid-template-columns: auto 1fr;
  gap: 0.5rem 1rem;
}

.definition-list dt {
  font-weight: bold;
  color: #495057;
}

.definition-list dd {
  margin: 0;
  color: #6c757d;
}

.badge {
  padding: 0.25rem 0.5rem;
  font-size: 0.75rem;
  font-weight: bold;
  border-radius: 4px;
  text-transform: uppercase;
}

.badge--danger {
  background-color: #dc3545;
  color: white;
}

.badge--warning {
  background-color: #ffc107;
  color: #212529;
}

.alert {
  padding: 1rem;
