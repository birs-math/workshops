<%#
# @resource is an instance of ConfirmEmailChange
# @comparison is set in the controller with detailed comparison data
%>

<% content_for(:title) { "Duplicate Person Conflict ##{@resource.id}" } %>

<header class="main__header">
  <h1 class="main__page-title">
    <%= content_for(:title) %>
    <% if @resource.priority == 'high' %>
      <span class="badge badge--danger">HIGH PRIORITY</span>
    <% end %>
    <% if @resource.has_recent_invitations %>
      <span class="badge badge--warning">RECENT INVITATIONS</span>
    <% end %>
  </h1>
  
  <div class="main__actions">
    <%= link_to "Back to List", admin_confirm_email_changes_path, 
        class: "btn btn--secondary" %>
  </div>
</header>

<% if @resource.auto_merge_blocked_reason.present? %>
  <div class="alert alert--warning">
    <strong>Auto-merge blocked:</strong> <%= @resource.auto_merge_blocked_reason %>
  </div>
<% end %>

<section class="main__content">
  <div class="comparison-container">
    <div class="comparison-header">
      <h2>Person Comparison</h2>
      <% if @recommendation %>
        <div class="recommendation-box recommendation--<%= @recommendation[:confidence] %>">
          <h3>System Recommendation: 
            <span class="confidence confidence--<%= @recommendation[:confidence] %>">
              <%= @recommendation[:confidence].to_s.titleize %> Confidence
            </span>
          </h3>
          <p><strong>Keep:</strong> <%= @recommendation[:keep].name %> (ID: <%= @recommendation[:keep].id %>)</p>
          <p><strong>Replace:</strong> <%= @recommendation[:replace].name %> (ID: <%= @recommendation[:replace].id %>)</p>
          <p><strong>Reason:</strong> <%= @recommendation[:reason] %></p>
        </div>
      <% end %>
    </div>

    <div class="comparison-grid">
      <div class="person-card <%= @recommendation && @recommendation[:keep] == @comparison[:person1][:record] ? 'person-card--recommended' : '' %>">
        <div class="person-card__header">
          <h3>Person 1: <%= @comparison[:person1][:record].name %> 
            <span class="person-id-badge">ID: <%= @comparison[:person1][:record].id %></span>
          </h3>
          <div class="person-card__meta">
            <span class="data-score">Score: <%= @comparison[:person1][:data_score] %></span>
            <span class="completeness">Complete: <%= @comparison[:person1][:completeness] %>%</span>
            <%= link_to "Edit Person", edit_admin_person_path(@comparison[:person1][:record]), 
                class: "btn btn--sm btn--tertiary", target: "_blank", 
                title: "Edit this person's details in a new tab" %>
          </div>
        </div>
        
        <div class="person-card__content">
          <div class="person-details">
            <p><strong>Email:</strong> <%= @comparison[:person1][:record].email %></p>
            <p><strong>Affiliation:</strong> <%= @comparison[:person1][:record].affiliation %></p>
            <p><strong>Title:</strong> <%= @comparison[:person1][:record].title %></p>
            <p><strong>Phone:</strong> <%= @comparison[:person1][:record].phone %></p>
            <p><strong>Address:</strong> 
              <%= [@comparison[:person1][:record].address1, 
                   @comparison[:person1][:record].city, 
                   @comparison[:person1][:record].region].compact.join(", ") %>
            </p>
          </div>
          
          <div class="person-stats">
            <div class="stat">
              <span class="stat__value"><%= @comparison[:person1][:membership_count] %></span>
              <span class="stat__label">Memberships</span>
            </div>
            <div class="stat">
              <span class="stat__value"><%= @comparison[:person1][:lecture_count] %></span>
              <span class="stat__label">Lectures</span>
            </div>
            <div class="stat">
              <span class="stat__value"><%= @comparison[:person1][:has_user_account] ? 'Yes' : 'No' %></span>
              <span class="stat__label">User Account</span>
            </div>
          </div>
          
          <div class="person-meta">
            <p><strong>Last Updated:</strong> <%= @comparison[:person1][:last_activity].strftime("%Y-%m-%d %H:%M") %></p>
            <p><strong>Updated By:</strong> <%= @comparison[:person1][:record].updated_by %></p>
          </div>
        </div>
      </div>

      <div class="person-card <%= @recommendation && @recommendation[:keep] == @comparison[:person2][:record] ? 'person-card--recommended' : '' %>">
        <div class="person-card__header">
          <h3>Person 2: <%= @comparison[:person2][:record].name %> 
            <span class="person-id-badge">ID: <%= @comparison[:person2][:record].id %></span>
          </h3>
          <div class="person-card__meta">
            <span class="data-score">Score: <%= @comparison[:person2][:data_score] %></span>
            <span class="completeness">Complete: <%= @comparison[:person2][:completeness] %>%</span>
            <%= link_to "Edit Person", edit_admin_person_path(@comparison[:person2][:record]), 
                class: "btn btn--sm btn--tertiary", target: "_blank", 
                title: "Edit this person's details in a new tab" %>
          </div>
        </div>
        
        <div class="person-card__content">
          <div class="person-details">
            <p><strong>Email:</strong> <%= @comparison[:person2][:record].email %></p>
            <p><strong>Affiliation:</strong> <%= @comparison[:person2][:record].affiliation %></p>
            <p><strong>Title:</strong> <%= @comparison[:person2][:record].title %></p>
            <p><strong>Phone:</strong> <%= @comparison[:person2][:record].phone %></p>
            <p><strong>Address:</strong> 
              <%= [@comparison[:person2][:record].address1, 
                   @comparison[:person2][:record].city, 
                   @comparison[:person2][:record].region].compact.join(", ") %>
            </p>
          </div>
          
          <div class="person-stats">
            <div class="stat">
              <span class="stat__value"><%= @comparison[:person2][:membership_count] %></span>
              <span class="stat__label">Memberships</span>
            </div>
            <div class="stat">
              <span class="stat__value"><%= @comparison[:person2][:lecture_count] %></span>
              <span class="stat__label">Lectures</span>
            </div>
            <div class="stat">
              <span class="stat__value"><%= @comparison[:person2][:has_user_account] ? 'Yes' : 'No' %></span>
              <span class="stat__label">User Account</span>
            </div>
          </div>
          
          <div class="person-meta">
            <p><strong>Last Updated:</strong> <%= @comparison[:person2][:last_activity].strftime("%Y-%m-%d %H:%M") %></p>
            <p><strong>Updated By:</strong> <%= @comparison[:person2][:record].updated_by %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="action-buttons">
      <% unless @resource.confirmed? %>
        <%= form_with url: merge_admin_confirm_email_change_path(@resource), method: :patch, 
            local: true, class: "action-form", 
            data: { confirm: "Are you sure you want to merge #{@recommendation[:replace].name} into #{@recommendation[:keep].name}? This cannot be undone." } do |f| %>
          <%= f.submit "✓ Keep Person #{@recommendation[:keep] == @comparison[:person1][:record] ? '1' : '2'} (ID: #{@recommendation[:keep].id})", 
              class: "btn btn--success btn--large" %>
        <% end %>

        <%= form_with url: merge_opposite_admin_confirm_email_change_path(@resource), method: :patch, 
            local: true, class: "action-form",
            data: { confirm: "Are you sure you want to merge #{@recommendation[:keep].name} into #{@recommendation[:replace].name}? This goes against the recommendation." } do |f| %>
          <%= f.submit "↔ Keep Person #{@recommendation[:replace] == @comparison[:person1][:record] ? '1' : '2'} (ID: #{@recommendation[:replace].id})", 
              class: "btn btn--warning btn--large" %>
        <% end %>

        <%= form_with url: reject_admin_confirm_email_change_path(@resource), method: :patch, 
            local: true, class: "action-form" do |f| %>
          <%= f.text_field :reason, placeholder: "Reason for rejecting merge...", 
              class: "form-control", style: "margin-bottom: 10px;" %>
          <%= f.submit "✗ Reject (No Merge)", 
              class: "btn btn--secondary btn--large" %>
        <% end %>
      <% else %>
        <div class="alert alert--info">
          This conflict has been resolved.
          <% if @resource.reviewed_by.present? %>
            Reviewed by <%= @resource.reviewed_by %> on <%= @resource.reviewed_at.strftime("%Y-%m-%d %H:%M") %>.
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="conflict-details">
    <h3>Conflict Information</h3>
    <dl class="definition-list">
      <dt>Created:</dt>
      <dd><%= @comparison[:conflict_info][:created_at].strftime("%Y-%m-%d %H:%M") %></dd>
      
      <dt>Priority:</dt>
      <dd><%= @comparison[:conflict_info][:priority]&.titleize || 'Normal' %></dd>
      
      <% if @comparison[:conflict_info][:has_recent_invitations] %>
        <dt>Recent Invitations:</dt>
        <dd class="text-warning">⚠ One or both persons have recent invitations</dd>
      <% end %>
      
      <% if @comparison[:conflict_info][:blocked_reason].present? %>
        <dt>Auto-merge blocked:</dt>
        <dd><%= @comparison[:conflict_info][:blocked_reason] %></dd>
      <% end %>
    </dl>
  </div>
</section>

<style>
.comparison-container {
  max-width: 1200px;
  margin: 0 auto;
}

.comparison-header {
  margin-bottom: 2rem;
  text-align: center;
}

.recommendation-box {
  background: #f8f9fa;
  border: 2px solid #dee2e6;
  border-radius: 8px;
  padding: 1rem;
  margin: 1rem 0;
}

.recommendation--high { border-color: #28a745; background-color: #d4edda; }
.recommendation--medium { border-color: #ffc107; background-color: #fff3cd; }
.recommendation--low { border-color: #dc3545; background-color: #f8d7da; }

.confidence--high { color: #28a745; }
.confidence--medium { color: #ffc107; }
.confidence--low { color: #dc3545; }

.comparison-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 2rem;
  margin-bottom: 2rem;
}

.person-card {
  border: 2px solid #dee2e6;
  border-radius: 8px;
  padding: 1rem;
  background: white;
}

.person-card--recommended {
  border-color: #28a745;
  background-color: #f8fff9;
}

.person-card__header {
  border-bottom: 1px solid #dee2e6;
  padding-bottom: 0.5rem;
  margin-bottom: 1rem;
}

.person-id-badge {
  background: #007bff;
  color: white;
  padding: 0.25rem 0.5rem;
  border-radius: 4px;
  font-size: 0.75rem;
  font-weight: bold;
  margin-left: 0.5rem;
}

.person-card__meta {
  font-size: 0.875rem;
  color: #6c757d;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.person-details p {
  margin: 0.25rem 0;
}

.person-stats {
  display: flex;
  gap: 1rem;
  margin: 1rem 0;
  padding: 0.5rem;
  background: #f8f9fa;
  border-radius: 4px;
}

.stat {
  text-align: center;
}

.stat__value {
  display: block;
  font-size: 1.5rem;
  font-weight: bold;
  color: #495057;
}

.stat__label {
  display: block;
  font-size: 0.75rem;
  color: #6c757d;
  text-transform: uppercase;
}

.person-meta {
  font-size: 0.875rem;
  color: #6c757d;
  margin-top: 1rem;
  padding-top: 0.5rem;
  border-top: 1px solid #dee2e6;
}

.action-buttons {
  display: flex;
  gap: 1rem;
  justify-content: center;
  margin: 2rem 0;
  flex-wrap: wrap;
}

