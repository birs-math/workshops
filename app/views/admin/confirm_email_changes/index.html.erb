<% content_for(:title) { "Duplicate Person Conflicts" } %>

<header class="main__header">
  <h1 class="main__page-title">
    <%= content_for(:title) %>
    <span class="count-badge">
      <%= pluralize(@total_stats[:total], 'conflict') %> 
      <span class="pending-count">(<%= @total_stats[:pending] %> pending)</span>
    </span>
  </h1>
  
  <div class="main__actions">
    <%= form_with url: admin_confirm_email_changes_path, method: :get, local: true, class: "search-form" do |f| %>
      <%= f.text_field :search, placeholder: "Search conflicts...", value: params[:search], class: "search-input" %>
      <%= f.select :status, 
          options_for_select([
            ['All conflicts', ''],
            ['Pending only', 'pending'],
            ['Resolved only', 'resolved'],
            ['High priority', 'high_priority'],
            ['Recent invitations', 'recent_invitations']
          ], params[:status]), 
          {}, { class: "filter-select" } %>
      <%= f.submit "Search", class: "btn btn--secondary" %>
    <% end %>
    <%= link_to "New Conflict", new_admin_confirm_email_change_path, class: "btn btn--primary" %>
  </div>
</header>

<section class="main__content">
  <% if @resources.any? %>
    <div class="conflicts-summary">
      <p class="summary-note">System-wide statistics (all conflicts)</p>
      <div class="summary-stats">
        <div class="stat-card stat-card--pending">
          <span class="stat-number"><%= @total_stats[:pending] %></span>
          <span class="stat-label">Pending</span>
        </div>
        <div class="stat-card stat-card--high-priority">
          <span class="stat-number"><%= @total_stats[:high_priority] %></span>
          <span class="stat-label">High Priority</span>
        </div>
        <div class="stat-card stat-card--recent-invitations">
          <span class="stat-number"><%= @total_stats[:recent_invitations] %></span>
          <span class="stat-label">Recent Invitations</span>
        </div>
        <div class="stat-card stat-card--resolved">
          <span class="stat-number"><%= @total_stats[:resolved] %></span>
          <span class="stat-label">Resolved</span>
        </div>
      </div>
    </div>

    <div class="conflicts-table-container">
      <table class="conflicts-table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Status</th>
            <th>Person 1</th>
            <th>Person 2</th>
            <th>Shared Email</th>
            <th>Priority</th>
            <th>Created</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @resources.each do |conflict| %>
            <tr class="conflict-row <%= 'conflict-row--resolved' if conflict.confirmed? %> <%= 'conflict-row--high-priority' if conflict.priority == 'high' %>">
              <td class="conflict-id">
                <%= link_to "##{conflict.id}", admin_confirm_email_change_path(conflict), 
                    class: "conflict-link" %>
              </td>
              
              <td class="conflict-status">
                <% if conflict.confirmed? %>
                  <span class="status-badge status-badge--resolved">‚úì Resolved</span>
                <% else %>
                  <span class="status-badge status-badge--pending">‚è≥ Pending</span>
                <% end %>
                
                <% if conflict.has_recent_invitations? %>
                  <span class="warning-flag" title="Has recent invitations">‚ö†</span>
                <% end %>
                
                <% if conflict.conflict_group_size > 1 %>
                  <span class="multi-conflict-badge" title="Part of <%= conflict.conflict_group_size %>-person conflict group">
                    üîó <%= conflict.conflict_group_size %>
                  </span>
                <% end %>
              </td>
              
              <td class="person-info">
                <% if conflict.replace_person %>
                  <div class="person-name"><%= conflict.replace_person.name %></div>
                  <div class="person-details">
                    ID: <%= conflict.replace_person.id %><br>
                    <%= conflict.replace_person.affiliation %>
                  </div>
                <% else %>
                  <div class="person-missing">‚ö† Person <%= conflict.replace_person_id %> (missing)</div>
                <% end %>
              </td>
              
              <td class="person-info">
                <% if conflict.replace_with %>
                  <div class="person-name"><%= conflict.replace_with.name %></div>
                  <div class="person-details">
                    ID: <%= conflict.replace_with.id %><br>
                    <%= conflict.replace_with.affiliation %>
                  </div>
                <% else %>
                  <div class="person-missing">‚ö† Person <%= conflict.replace_with_id %> (missing)</div>
                <% end %>
              </td>
              
              <td class="shared-email">
                <%= conflict.replace_email %>
              </td>
              
              <td class="priority">
                <% if conflict.priority == 'high' %>
                  <span class="priority-badge priority-badge--high">üî¥ High</span>
                <% else %>
                  <span class="priority-badge priority-badge--normal">Normal</span>
                <% end %>
              </td>
              
              <td class="created-date">
                <%= time_ago_in_words(conflict.created_at) %> ago
              </td>
              
              <td class="actions">
                <% if conflict.replace_person && conflict.replace_with %>
                  <%= link_to "Compare", compare_admin_confirm_email_change_path(conflict), 
                      class: "btn btn--sm btn--primary" %>
                <% else %>
                  <span class="text-muted">Missing person data</span>
                  <%= link_to "Delete", admin_confirm_email_change_path(conflict), 
                      method: :delete, 
                      class: "btn btn--sm btn--danger",
                      data: { confirm: "Delete this broken conflict record?" } %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <% if @resources.respond_to?(:current_page) %>
      <div class="pagination-wrapper">
        <%= paginate @resources %>
      </div>
    <% end %>
  <% else %>
    <div class="no-conflicts">
      <h3>üéâ No duplicate person conflicts found!</h3>
      <p>All person records have unique email addresses.</p>
    </div>
  <% end %>
</section>

