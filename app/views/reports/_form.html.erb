<%= form_with do |f| %>
  <div class="row">
    <% fields_helper_object.each do |hash| %>
      <div class="col-md-2">
        <div class="card">
          <div class="card-body">
            <h4 class="form-label"><%= hash[:label] %></h4>
            <% I18n.t(hash[:i18n_key]).each do |field, value| %>
              <div class="form-check">
                <%= f.check_box field, checked: hash[:checked], class: 'form-check-input', disabled: @disable_inputs %>
                <%= f.label field, class: 'form-check-label' do %>
                  <%= value %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
    <% if @show_datepicker %>
      <div class="col-md-2">
        <div class="card">
          <div class="card-body">
            <h4 class="form-label">Period</h4>
            <div class="form-group">
              <%= f.label :start_date, class: 'form-label' do %>
                Start date
                <%= f.date_field :start_date, class: 'form-control', required: true %>
              <% end %>
            </div>
            <div class="form-group">
              <%= f.label :end_date, class: 'form-label' do %>
                End date
                <%= f.date_field :end_date, class: 'form-control', required: true %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <div class="col-12 spaced">
      <%= f.submit 'Get report', class: 'btn btn-primary', disabled: @disable_inputs %>
    </div>
  </div>
<% end %>
