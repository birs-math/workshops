<%= form_with do |f| %>
  <div class="card-group">
    <% fields_helper_object.each do |hash| %>
      <div class="card">
        <div class="card-body">
          <h4 class="form-label"><%= hash[:label] %></h4>
          <% I18n.t(hash[:i18n_key]).each do |option, option_value| %>
            <% if option == :attendance %>
              <%= f.label option, class: 'form-check-label' do %>
                <%= option_value %>
              <% end %>
              <div class="form-check">
                <% I18n.t('memberships.attendance').each do |attendance, attendance_value| %>
                  <div class="form-check">
                    <%= f.check_box attendance, checked: hash[:checked], class: 'form-check-input', disabled: @disable_inputs %>
                    <%= f.label attendance, class: 'form-check-label' do %>
                      <%= attendance_value %>
                    <% end %>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="form-check">
                <%= f.check_box option, checked: hash[:checked], class: 'form-check-input', disabled: @disable_inputs %>
                <%= f.label option, class: 'form-check-label' do %>
                  <%= option_value %>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
    <% if @show_datepicker %>
      <div class="card">
        <div class="card-body">
          <h4 class="form-label">Period</h4>
          <div class="form-group">
            <%= f.label :start_date, class: 'form-label' do %>
              Start date
              <%= f.date_field :start_date, class: 'form-control', required: true %>
            <% end %>
          </div>
          <div class="form-group">
            <%= f.label :end_date, class: 'form-label' do %>
              End date
              <%= f.date_field :end_date, class: 'form-control', required: true %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
      <div class="col-12 spaced" style="padding-left: 0;">
        <%= f.submit 'Get report', class: 'btn btn-primary', disabled: @disable_inputs %>
      </div>
  </div>
<% end %>
